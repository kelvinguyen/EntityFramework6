<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>World Map - @ViewBag.Title</title>
    <link rel="stylesheet" href="~/lib/bootswatch/yeti/bootstrap.min.css"/>
    <link type="text/css" rel="stylesheet" href="~/lib/font-awesome/css/font-awesome.min.css"/>
    <link type="text/css" rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" />

</head>
<body>
    <div id="sidebar">
        <img src="~/img/images.jpg" alt="avatar" class="avatar" />
        <span id="username">
            kelvin nguyen
        </span>
        <ul class="nav">
            <li class="active"><a asp-controller="App" asp-action="Index">Home</a></li>
            <li><a asp-controller="App" asp-action="About">About</a></li>
            <li><a asp-controller="App" asp-action="Contact">Contact</a></li>
        </ul>
    </div>
    <div id="wrapper">
        <nav class="nav navbar-inverse">
            <div class="container-fluid">
                <ul class="nav navbar-nav navbar-left">
                    <li>
                        <button class="btn btn-primary btn-sm">
                            <i class="fa fa-angle-left"></i>
                        </button>
                    </li>
                </ul>
            </div>
            <a asp-controller="App"
               asp-action="Index"
               class="navbar-brand">
                The World Web
            </a>
            <ul class="nav navbar-nav navbar-right">
                <li>
                    <a href="#" class="btn btn-sm btn-info">
                        <i class="fa fa-save"> Save </i>
                    </a>
                </li>
                <li>
                    <a href="#" class="btn btn-sm btn-info">
                        <i class="fa fa-print"> Print </i>
                    </a>
                </li>
            </ul>
        </nav>


        <div id="main" class="container-fluid">
            @RenderBody()
        </div>
        <div id="footer" class="container-fluid">
            <div class="navbar navbar-inverse navbar-fixed-bottom">
                <h4 class="text-center text-info">&copy; The World Map Ltd.</h4>
            </div>
        </div>
    </div>
    <script type="text/javascript" src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="~/lib/jquery/dist/jquery.min.js"></script>
    @RenderSection("scripts", false)
    <script src="~/js/site.js"></script>
</body>
</html>
